nextflow_process {

    name "Test Process SOURCEPREDICT"
    script "../main.nf"
    process "SOURCEPREDICT"

    tag "modules"
    tag "modules_nfcore"
    tag "sourcepredict"

    test("metagenome - csv") {

        when {
            process {
                """                
                input[0] = [
                    [ id:'test' ], // meta map
                    file('https://raw.githubusercontent.com/maxibor/sourcepredict/master/data/test/dog_test_sink_sample.csv', checkIfExists: true),
                ]
                input[1] = [
                    [ id:'sources' ],
                    file('https://raw.githubusercontent.com/maxibor/sourcepredict/master/data/modern_gut_microbiomes_sources.csv', checkIfExists: true)
                ]
                input[2] = [
                    [ id:'labels' ],
                    file('https://raw.githubusercontent.com/maxibor/sourcepredict/master/data/modern_gut_microbiomes_labels.csv', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.report,
                    process.out.versions,
                ).match()
                }
            )
        }

    }

    test("metagenome - csv - stub") {

        options "-stub"

        when {
            process {
                """                
                input[0] = [
                    [ id:'test' ], // meta map
                    file('https://raw.githubusercontent.com/maxibor/sourcepredict/master/data/test/dog_test_sink_sample.csv', checkIfExists: true),
                ]
                input[1] = [
                    [ id:'sources' ],
                    file('https://raw.githubusercontent.com/maxibor/sourcepredict/master/data/modern_gut_microbiomes_sources.csv', checkIfExists: true)
                ]
                input[2] = [
                    [ id:'labels' ],
                    file('https://raw.githubusercontent.com/maxibor/sourcepredict/master/data/modern_gut_microbiomes_labels.csv', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.report,
                    process.out.versions,
                ).match()
                }
            )
        }

    }

}
